@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Core.Models.Blocks.BlockListItem>

@using ContentModels = Umbraco.Web.PublishedModels;

@{

    var content = (ContentModels.CarouselHero)Model.Content;
    var settings = (ContentModels.CarouselHero)Model.Settings;
    var imageUrl = content.HasValue("image") ? content.Value<IPublishedContent>("image").Url : "";

}


<!-- Hero Section Begin -->
<div class="hs-item set-bg" data-setbg="@imageUrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="hc-inner-text">
                <div class="hc-text" style="max-width: 80%;width: 500px;">
                    <h4>@content.Title</h4>
                    <p>@content.Subtitle</p>
                </div>
            </div>
        </div>
    </div>
</div>
