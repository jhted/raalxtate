@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    Layout = "Master.cshtml";

    var blogImage = Model.Value<IPublishedContent>("headerImage", fallback: Fallback.ToAncestors).Url();
    var agent = Model.Value<Agent>("SelectAgent");
}

@* the fun starts here *@



<!-- Blog Hero Section Begin -->
<section class="blog-hero-section set-bg" data-setbg="@blogImage">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bh-text" style="max-width: 80%;width: 500px;">
                    <h4>@Model.Value("pageTitle")</h4>
                    <ul>
                        <li>by <span>@agent.Value("fullNames")</span></li>
                        <li>Seb 24, 2019</li>
                        <li>12 Comment</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Hero Section End -->



<!-- Blog Details Section Begin -->
<section class="blog-details-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 m-auto p-0">
                <div class="blog-details-content">

                    @if (Model.HasProperty("pageContentGrid") && Model.HasValue("pageContentGrid"))
                    {
                        <!-- Content Section Begin -->
                        <section class="about-section spad">
                            <div class="container">
                                @Html.GetGridHtml(Model, "pageContentGrid")
                            </div>
                        </section>
                        <!-- Content Section End -->
                    }

                    <div class="bc-tags">
                        <a href="#">Fashion</a>
                        <a href="#">Street style</a>
                        <a href="#">Diversity</a>
                        <a href="#">Beauty</a>
                    </div>
                    <div class="bc-related-post">
                        <a href="#" class="previous-post"><i class="fa fa-angle-left"></i> Previous posts</a>
                        <a href="#" class="next-post">Next posts <i class="fa fa-angle-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
